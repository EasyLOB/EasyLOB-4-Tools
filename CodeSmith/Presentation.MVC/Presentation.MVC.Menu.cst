    "Text": "MenuResources.Application",
    "SubMenus": [
<%   int tables = SourceTables.Count;
     int t = 0;
     foreach (TableSchema table in SourceTables) {
        t++; %>
      {
        "Text": "<%= ClassName(table.Name, Culture) %>Resources.EntityPlural",
        "Url": "/<%= ClassName(table.Name, Culture) %>"
      }<%= t < tables ? "," : "" %>
<%  } %>
